---
import BaseLayout from "@layouts/BaseLayout.astro";

import Hero from "@components/Hero.astro";
---

<BaseLayout title="Privacy – Jakob Bouchard">
	<div class="privacy wrapper stack gap-20">
		<header>
			<Hero title="Privacy" />
		</header>

		<section>
			<h2 class="section-title">Analytics</h2>
			<div class="content">
				<p>I am not using any analytics software as of now.</p>
			</div>
		</section>

		<section>
			<h2 class="section-title">Cookies</h2>
			<div class="content">
				<p>
					While I think cookies taste amazing — especially PC’s The Decadent
					cookies — I don’t want them on my website.
				</p>
			</div>
		</section>
	</div>
</BaseLayout>

<style>
	.privacy {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
		padding-bottom: 3.5rem;
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content p + p {
		margin-top: 1.5rem;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.privacy {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.privacy > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
