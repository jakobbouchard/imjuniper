---
import "@styles/global.css";

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const {
	title = "Juniper Bouchard – Game Programmer",
	description = "Juniper Bouchard’s portfolio, a reflection of her journey in video game development, as a game programmer from Montréal. Here, you’ll find her best projects, showcasing unique gaming experiences and game mechanics. She's well-versed in Unreal Engine 5 and Godot, and is excited to share her creations with you!",
} = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<title>{title}</title>
<meta name="description" property="og:description" content={description} />

<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="en_CA" />
<meta property="og:url" content="https://imjuniper.fyi" />
<meta property="og:image" content="https://imjuniper.fyi/social.jpg" />
<meta
	property="og:image:alt"
	content="A black and white illustration of Juniper, a game programmer, holding a donut in her mouth."
/>
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<link rel="me" href="https://mastodon.gamedev.place/@jakobbchrd" />

<!-- Schema.org Person type -->
<script is:inline type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Person",
		"familyName": "Bouchard",
		"givenName": "Juniper",
		"image": "https://imjuniper.fyi/social.jpg",
		"jobTitle": "Game Programmer",
		"alumniOf": {
			"@type": "EducationalOrganization",
			"name": "Université du Québec en Abitibi-Témiscamingue",
			"url": "https://www.uqat.ca"
		},
		"sameAs": [
			"https://bsky.app/profile/imjuniper.fyi",
			"https://www.linkedin.com/in/jakobbouchard/",
			"https://github.com/imjuniper",
			"https://mastodon.gamedev.place/@jakobbchrd",
			"https://imjuniper.itch.io"
		]
	}
</script>

<script
	is:inline
	data-goatcounter="https://imjuniper.goatcounter.com/count"
	async
	src="//gc.zgo.at/count.js"></script>

<script is:inline>
	document.documentElement.classList.replace("no-js", "js");

	const getThemePreference = () => {
		if (localStorage.getItem("theme") != null) {
			return localStorage.getItem("theme");
		}

		return window.matchMedia("(prefers-color-scheme: dark)").matches
			? "dark"
			: "light";
	};

	const storeThemePreference = () => {
		localStorage.setItem(
			"theme",
			document.documentElement.classList.contains("theme-dark")
				? "dark"
				: "light",
		);
	};

	document.documentElement.classList.toggle(
		"theme-dark",
		getThemePreference() === "dark",
	);

	new MutationObserver(storeThemePreference).observe(
		document.documentElement,
		{ attributeFilter: ["class"] },
	);
</script>
